    "#汉洛塔\n",
    "#/user/bin/python 3\n",
    "#-*- conding:utf-8 -*-\n",
    "\n",
    "def move(n, a,b,c):\n",
    "    if n == 1:\n",
    "        c.insert(0, a[0])\n",
    "        a.pop(0)\n",
    "        print(a,b,c)\n",
    "    \n",
    "    else:\n",
    "        move(n-1,a,c,b)\n",
    "        move(1,a,b,c)\n",
    "        move(n-1,b,a,c)\n",
    "\n",
    "move(4,[1,2,3,4],[],[])"
